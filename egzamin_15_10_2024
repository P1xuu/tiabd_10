<?php
// Dane do połączenia z bazą danych
$host = 'localhost';
$dbname = 'wedkowanie';
$user = 'root';
$pass = '';

// Dane z formularza
$imie = $_POST['imie'];
$nazwisko = $_POST['nazwisko'];
$adres = $_POST['adres'];

// Połączenie z bazą danych
$conn = new mysqli($host, $user, $pass, $dbname);

// Sprawdzanie połączenia
if ($conn->connect_error) {
    die("Połączenie nieudane: " . $conn->connect_error);
}

// Zapytanie SQL (zmodyfikowane zapytanie 1)
$sql = "INSERT INTO karty_wedkarskie (imie, nazwisko, adres, data_zezwolenia, punkty) 
        VALUES (?, ?, ?, NULL, NULL)";

// Przygotowanie zapytania
$stmt = $conn->prepare($sql);

// Sprawdzenie, czy przygotowanie się udało
if ($stmt === false) {
    die("Błąd w przygotowaniu zapytania: " . $conn->error);
}

// Przypisanie wartości do parametrów
$stmt->bind_param("sss", $imie, $nazwisko, $adres);

// Wykonanie zapytania
if ($stmt->execute()) {
    echo "Dane zostały pomyślnie zapisane!";
} else {
    echo "Błąd podczas zapisywania danych: " . $stmt->error;
}

// Zamykanie zapytania i połączenia
$stmt->close();
$conn->close();
?>
